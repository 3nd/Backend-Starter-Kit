extends layout

block content
  .container
    h1 註冊頁面
    form(role='form' action='/register' method='post')
      .form-group
        input.form-control(type='text', name='username')
      .form-group
        input.form-control(type='password', name='password')
      button.btn.btn-default(type='submit') 註冊
      a(href='/')
        button.btn.btn-primary(type='button') 取消
